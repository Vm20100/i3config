# ------------- Docking 

set $mode_monitor "[d] docking , [u] undocking "
set $monitor1 VGA-1
set $monitor2 LVDS-1

mode $mode_monitor {
    
    bindsym d exec xrandr --output $monitor1 --primary --output $monitor2 --off , mode "default"
    bindsym u exec xrandr --output $monitor2 --primary --output $monitor1 --off, mode "default"
    
     # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    
}

bindsym $mod+Shift+d mode $mode_monitor

